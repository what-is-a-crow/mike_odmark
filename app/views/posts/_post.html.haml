.post
  .post-header
    - if single
      %h1= post.title
    - else
      %h2= link_to post.title, post
    - if admin_signed_in?
      = link_to image_tag("icons/pencil.png"), edit_post_path(post)
      = link_to image_tag("icons/x.png"), post_path(post), method: "delete", confirm: "Are you sure you want to remove this the post \"#{post.title}\"?"
    %p.post-date= post.updated_at.strftime("%B %e, %Y")
  %p.post-content.html-output= raw post.content
